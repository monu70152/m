# m api-stubs-docs -j$(nproc --all)

# m system-api-stubs-docs -j$(nproc --all) 

# m test-api-stubs-docs -j$(nproc --all) 

# m systemimage -j$(nproc --all)

# m productimage -j$(nproc --all)

# m vendorimage -j$(nproc --all)

# m sepolicy

# m init

# m bootimage

# Build please
mka otapackage -j$(nproc --all)
